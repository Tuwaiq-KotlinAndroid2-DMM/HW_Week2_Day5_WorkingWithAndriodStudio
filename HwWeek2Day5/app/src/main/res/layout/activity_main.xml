<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextSecondNumber"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="568dp"
        android:ems="10"
        android:hint="Second Number"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextFirstNumbe" />

    <EditText
        android:id="@+id/editTextFirstNumbe"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="568dp"
        android:ems="10"
        android:hint="First Number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="32dp"
        android:text="Result :"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/SumButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstNumbe" />

    <Button
        android:id="@+id/SumButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="406dp"
        android:backgroundTint="#009688"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/SubButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="388dp"
        android:backgroundTint="#00BCD4"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/SumButton" />

    <Button
        android:id="@+id/MulButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="240dp"
        android:backgroundTint="#FFD53B"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SumButton" />

    <Button
        android:id="@+id/DivButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#DD5080"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/MulButton"
        app:layout_constraintTop_toBottomOf="@+id/SubButton" />

    <Button
        android:id="@+id/ClearButton"
        android:layout_width="133dp"
        android:layout_height="65dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#CDDC39"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/Clickbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SubButton"
        app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber" />

    <Button
        android:id="@+id/Clickbutton"
        android:layout_width="133dp"
        android:layout_height="65dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="300dp"
        android:backgroundTint="#CF7BDD"
        android:text="Click Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/DivButton" />

</androidx.constraintlayout.widget.ConstraintLayout>